{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "pretty": true,
      "baseUrl": "./",
      "removeComments": true,
      "experimentalDecorators": true,
      "target": "es6",
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "types": ["reflect-metadata"],
      "plugins": [
        {
          "name": "typescript-tslint-plugin"
        }
      ]
    },
    "include": [
      "./src/**/*.ts"
    ]
  }