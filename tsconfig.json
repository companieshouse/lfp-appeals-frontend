{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "baseUrl": "./src",
        "removeComments": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "skipLibCheck": true,
        "plugins": [
        ],
        "paths": {
            "app/*": ["./*"],
            "test/*": ["../test/*"]
        }
    }
}
