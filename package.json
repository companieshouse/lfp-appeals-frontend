{
  "name": "lfp-appeals-frontend",
  "version": "0.0.1",
  "description": "This is a web application allowing users to appeal penalties received due to the late filling of their companies' accounts.",
  "main": "dist/App.js",
  "repository": {
    "url": "https://github.com/companieshouse/lfp-appeals-frontend"
  },
  "license": "MIT",
  "scripts": {
    "start": "npm run build && NODE_ENV=test node dist/App.js",
    "build": "gulp build",
    "build:init": "gulp copy-descriptors copy-govukfrontend",
    "build:copy-views": "gulp copy-views",
    "build:compile": "tsc --project tsconfig.prod.json --outDir dist",
    "watch": "npm run build:clean && gulp start:watch",
    "build:clean": "gulp build:clean",
    "lint": "eslint '{src,test}/**/*'",
    "lint:fix": "eslint '{src,test}/**/*' --fix",
    "test": "NODE_ENV=test mocha 'test/**/*.test.ts'",
    "test:coverage": "nyc npm test",
    "analyse-code": "sonar-scanner"
  },
  "dependencies": {
    "@companieshouse/api-sdk-node": "^2.0.152",
    "@companieshouse/node-session-handler": "^5.0.1",
    "@companieshouse/structured-logging-node": "^2.0.1",
    "@companieshouse/web-security-node": "^4.4.4",
    "@hapi/joi": "^17.1.1",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.1.4",
    "form-data": "^3.0.0",
    "govuk-frontend": "^3.11.0",
    "http-status-codes": "^2.2.0",
    "inversify": "^5.1.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "~6.3.2",
    "moment": "^2.29.4",
    "msgpack5": "^6.0.2",
    "multer": "^1.4.5-lts.1",
    "node-jose": "^2.2.0",
    "nunjucks": "^3.2.4",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.141.0",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.11",
    "@types/cookie-parser": "^1.4.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/hapi__joi": "^17.1.0",
    "@types/ioredis": "^4.16.2",
    "@types/mocha": "^7.0.2",
    "@types/multer": "^1.4.7",
    "@types/node-jose": "^1.1.4",
    "@types/nunjucks": "^3.2.2",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "chai": "^4.2.0",
    "del": "^5.1.0",
    "eslint": "^9.25.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.5",
    "merge": "^2.1.1",
    "minimist": "^1.2.8",
    "mocha": "^9.1.3",
    "nock": "^12.0.3",
    "nyc": "^15.0.1",
    "sonarqube-scanner": "^2.9.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^4.9.4"
  },
  "overrides": {
    "glob-parent": "6.0.2",
    "express": "$express",
    "nodemon": "3.0.1",
    "chokidar": "3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  }
}
