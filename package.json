{
  "name": "lfp-appeals-frontend",
  "version": "0.0.1",
  "description": "This is a web application allowing users to appeal penalties received due to the late filling of their companies' accounts.",
  "main": "dist/App.js",
  "repository": {
    "url": "https://github.com/companieshouse/lfp-appeals-frontend"
  },
  "license": "MIT",
  "scripts": {
    "start": "npm run build && NODE_ENV=vagrant node dist/App.js",
    "build": "gulp build",
    "watch": "npm run build:clean && gulp start:watch",
    "build:clean": "gulp build:clean",
    "sass:watch": "gulp sass:watch",
    "lint": "tsc --project tsconfig.json --noEmit && tslint --project tsconfig.json --config tslint.json",
    "lint:scss": "sass-lint './src/public/sass/**/*.scss' --verbose --ignore 'node_modules/**/*.scss'",
    "test": "NODE_ENV=vagrant mocha 'test/**/*.test.ts'",
    "test:coverage": "nyc npm test",
    "analyse-code": "sonar-scanner"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "avsc": "^5.4.20",
    "axios": "^0.19.2",
    "body-parser": "^1.18.2",
    "ch-logging": "git+ssh://git@github.com/companieshouse/ch-structured-logging-node.git#a3e0dcc57f91f63803e02ceef2cc5e4038de9a19",
    "ch-node-session-handler": "git+ssh://git@github.com/companieshouse/node-session-handler.git#c85dad518b56374400ee48ce5340d7fbe24a4a5f",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.15.5",
    "express-async-handler": "^1.1.4",
    "form-data": "^3.0.0",
    "govuk-frontend": "^3.6.0",
    "http-status-codes": "^1.4.0",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.3.2",
    "kafka-node": "^5.0.0",
    "multer": "^1.4.2",
    "nunjucks": "^3.2.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.120.0",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.11",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^16.0.12",
    "@types/ioredis": "^4.14.9",
    "@types/mocha": "^7.0.2",
    "@types/multer": "^1.4.2",
    "@types/nunjucks": "^3.1.3",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-sass": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-watch-sass": "^1.4.1",
    "husky": "^4.2.5",
    "minimist": "^1.2.5",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "node-sass": "^4.13.1",
    "nyc": "^15.0.1",
    "sass-lint": "^1.13.1",
    "sonarqube-scanner": "^2.6.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "typescript-tslint-plugin": "^0.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run lint:scss",
      "pre-push": "npm test"
    }
  }
}
