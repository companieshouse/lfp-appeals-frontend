{% block head %}
  <!--[if !IE 8]><!-->
  <link href="css/application.css" rel="stylesheet"/>
  <!--<![endif]-->

  {# For Internet Explorer 8, you need to compile specific stylesheet #}
  {# see https://github.com/alphagov/govuk-frontend/blob/master/docs/installation/supporting-internet-explorer-8.md #}
  <!--[if IE 8]>
  <link href="{{CDN_URL}}/stylesheets/extensions/application-ie8.css" rel="stylesheet" />
  <![endif]-->

  {# For older browsers to allow them to recognise HTML5 elements such as `<header>` #}
  <!--[if lt IE 9]>
  <script src="/html5-shiv/html5shiv.js"></script>
  <![endif]-->

  <script src="https://code.jquery.com/jquery-1.12.4.min.js"
          integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
          crossorigin="anonymous"></script>

  {% block download %}{% endblock %}
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/appeals",
    serviceName: "Appeal a late filing penalty",
    serviceUrl: "/appeals",
    containerClasses: "govuk-width-container"})
  }}
{% endblock %}

{% block pageTitle %}
  Appeal a late filing penalty
{% endblock %}

{% block beforeContent %}
  {# {{ govukPhaseBanner({
    tag: {
      text: "Beta"
    }
  }) 
  }} #}
  {% block backLink %}{% endblock %}
  <div class="govuk-breadcrumbs">
    <ol class="govuk-breadcrumbs__list">
      <li class="govuk-breadcrumbs__list-item">
        <a class="govuk-breadcrumbs__link" href="https://www.gov.uk/">Home</a>
      </li>
      <li class="govuk-breadcrumbs__list-item">
        <a class="govuk-breadcrumbs__link" href="https://www.gov.uk/browse/business">Business and self-employed</a>
      </li>
      <li class="govuk-breadcrumbs__list-item">
        <a class="govuk-breadcrumbs__link" href="https://www.gov.uk/browse/business/limited-company">Running a limited company</a>
      </li>
    </ol>
  </div>
{% endblock %}

{% block content%}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
    
      <h1 class="govuk-heading-xl">
        {# {% if serviceName %}
          {{ serviceName }}
        {% endif %} #}
        Appeal a late filing penalty
      </h1>

      <p class="govuk-body-l">Use this service to appeal a penalty issued to a company for not filing its annual accounts on time.</p>
      <p>It may take up to 30 minutes to complete this application.</p>
      
      {{ govukButton({
        text: "Start now",
        href: "signin",
        isStartButton: true
      }) }}

      <h2 class="govuk-heading-m">Before you start</h2>
      
      <p>
        <a href="https://www.gov.uk/government/publications/late-filing-penalties/late-filing-penalties#appealing" target="_blank">Read the guidance on appealing a penalty.</a>
      </p>

      <h3 class="govuk-heading-s">You'll need:</h3>
      
      <ul class="govuk-list govuk-list--bullet">
        <li>the company number</li>
        <li>the company authentication code for online filing</li>
        <li>the penalty reference</li>
        <li>The reason for the appeal</li>
        <li>documents that support the reason for the appeal (optional)</li>
      </ul>

    </div>
  </div>
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script src="govuk/all.js"></script>
  <script>
    window
      .GOVUKFrontend
      .initAll()
  </script>
{% endblock %}