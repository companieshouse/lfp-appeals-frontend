{% extends 'layout.njk' %}

{% from 'govuk/components/panel/macro.njk' import govukPanel %}

{% block beforeContent %}{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukPanel
        ({
          titleText: 'Appeal submitted',
          html: 'Your reference number is your company number <br><strong>' + companyNumber + '</strong>'
        })
      }}

      <p class="govuk-body-l">
        We’ve sent a confirmation email to
        <span class="govuk-body-l govuk-!-font-weight-bold">{{ userEmail }}</span>
        which contains the information you’ve provided for this appeal.
      </p>

      <h2 class="govuk-heading-m">What happens next</h2>
      <p class="govuk-body">We'll review the appeal and email you with a decision within 20 working days.
        We'll pause recovery action during this time.</p>
      <p class="govuk-body">We may contact you during the review process if we need more information.</p>
    </div>
  </div>
{% endblock %}
