{% extends 'layout.njk' %}

{% from 'govuk/components/back-link/macro.njk'     import govukBackLink %}
{% from 'govuk/components/button/macro.njk'        import govukButton %}
{% from "govuk/components/table/macro.njk"         import govukTable %}

{% block pageTitle %}
  Review your penalty details
{% endblock %}

{% block backLink %}
  {{
    govukBackLink({
      text: 'Back',
      href: navigation.back.href
    })
  }}
{% endblock %}

{% block content %}
  <form method="post" action="">
    <div class="govuk-width-container">
      <main role="main" class="govuk-main-wrapper">
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">
              <span class="govuk-visually-hidden">Review the
            </span>Penalty details for
            <span class="govuk-!-font-weight-bold">{{ companyName }}</span>
            </h1>
            <h2 class="govuk-heading-m">Accounts period made up to {{ madeUpToDate }}</h2>

            {{ 
              govukTable({
                caption: caption,
                firstCellIsHeader: true,
                head: header,
                rows: tableRows
              }) 
            }}

            {{ 
              govukButton({
                text: 'Continue',
                attributes: {
                  id: 'submit'
                }
              }) 
            }}
          </div>
        </div>
      </main>
    </div>
  </form>
{% endblock %}
