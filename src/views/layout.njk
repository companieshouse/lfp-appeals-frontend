{% extends "govuk/template.njk" %}

{% from "govuk/components/footer/macro.njk"       import govukFooter %}
{% from "govuk/components/header/macro.njk"       import govukHeader %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}


{% set serviceName = "Appeal a late filing penalty" %}

{% block head %}
  <!--[if !IE 8]><!-->
  <link href="/css/application.css" rel="stylesheet"/>
  <!--<![endif]-->

  {# For Internet Explorer 8, you need to compile specific stylesheet #}
  {# see https://github.com/alphagov/govuk-frontend/blob/master/docs/installation/supporting-internet-explorer-8.md #}
  <!--[if IE 8]>
  <link href="{{CDN_URL}}/stylesheets/extensions/application-ie8.css" rel="stylesheet" />
  <![endif]-->

  {# For older browsers to allow them to recognise HTML5 elements such as `<header>` #}
  <!--[if lt IE 9]>
  <script src="/html5-shiv/html5shiv.js"></script>
  <![endif]-->

  <script src="https://code.jquery.com/jquery-1.12.4.min.js"
          integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
          crossorigin="anonymous"></script>

  {% block download %}{% endblock %}
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/appeals",
    serviceName: serviceName,
    serviceUrl: "/appeals",
    containerClasses: "govuk-width-container"})
  }}
{% endblock %}

{% set mainClasses = mainClasses | default("govuk-main-wrapper--auto-spacing") %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: "Beta"
    }
  }) }}
  {% block backLink %}{% endblock %}
{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "http://resources.companieshouse.gov.uk/legal/termsAndConditions.shtml",
          text: "Policies"
        },
        {
          href: "https://www.gov.uk/help/cookies",
          text: "Cookies"
        },
        {
          href: "https://www.gov.uk/contact",
          text: "Contact us"
        },
        {
          href: "https://developer.companieshouse.gov.uk/",
          text: "Developers"
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script src="govuk/all.js"></script>
  <script>window.GOVUKFrontend.initAll()</script>
{% endblock %}